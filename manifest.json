{
    "name": "ALX Intranet Theme Selector",
    "version": "1.0",
    "description": "ALX Intranet Theme Selector",
    "manifest_version": 3,
    "action": {
        "default_action": "ALX DarkMode Reader",
        "default_popup": "theme.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://intranet.alxswe.com/*"
            ],
            "js": ["js/app.js"],
            "css": ["css/alx-dark.css"],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "activeTab",
        "scripting"
    ]
}